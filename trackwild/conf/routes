# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# The controller for the default landing home page
GET     /                           controllers.HomeController.index

# The controller for the login and register page

GET     /login                      controllers.LoginRegController.loadLogin
+ nocsrf
POST    /login                      controllers.LoginRegController.attemptLogin

# The controller for the main dashboard upon signin
GET     /dashboard/:userName        controllers.DashboardController.index(userName:String)

# The controller for the main project view workspace, loads default values if none found
GET     /projectworkspace/:userName/:projectName       controllers.ProjectsWorkSpaceController.loadWorkspace(userName:String, projectName:String )
GET     /projectworkspace/datauploader  controllers.ProjectsWorkSpaceController.renderNewTableUploader
GET     /projectworkspace/dataAppender  controllers.ProjectsWorkSpaceController.renderDataAppender

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


